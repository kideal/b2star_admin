<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.dao.consumized.GoodsServiceMapper">
  <resultMap id="goodscasdto" type="com.mall.dto.GoodsCasDto" extends="com.mall.dao.GoodsMapper.BaseResultMap">
    <result column="cas" jdbcType="VARCHAR" property="cas"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
  </resultMap>
  <select id="selectByBrandId">
    SELECT g.*,p.attribute_value AS 'cas' FROM goods g LEFT JOIN product_attribute p ON g.product_id = p.product_id AND p.attribute_code = '003' WHERE g.brand_id = #{brandId}
  </select>
</mapper>